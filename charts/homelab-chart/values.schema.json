{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "autoscaling": {
            "description": "Horizontal Pod Autoscaler configuration",
            "type": "object",
            "properties": {
                "enabled": {
                    "description": "Enable horizontal pod autoscaling",
                    "default": false,
                    "type": "boolean"
                },
                "maxReplicas": {
                    "description": "Maximum number of replicas",
                    "default": 100,
                    "type": "integer",
                    "minimum": 1
                },
                "minReplicas": {
                    "description": "Minimum number of replicas",
                    "default": 1,
                    "type": "integer",
                    "minimum": 1
                },
                "targetCPUUtilizationPercentage": {
                    "description": "Target CPU utilization percentage",
                    "default": 80,
                    "type": "integer",
                    "maximum": 100,
                    "minimum": 1
                }
            }
        },
        "certificate": {
            "description": "Certificate configuration for cert-manager",
            "type": "object",
            "properties": {
                "certificates": {
                    "description": "List of Certificates to create",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "commonName": {
                                "description": "Common name for the certificate",
                                "type": "string"
                            },
                            "dnsNames": {
                                "description": "List of DNS names for the certificate",
                                "type": "array"
                            },
                            "duration": {
                                "description": "Certificate duration (e.g., 2160h for 90 days)",
                                "type": "string"
                            },
                            "issuerRef": {
                                "description": "Reference to the Issuer or ClusterIssuer",
                                "type": "object",
                                "properties": {
                                    "group": {
                                        "description": "API group of the issuer",
                                        "type": "string"
                                    },
                                    "kind": {
                                        "description": "Kind of the issuer",
                                        "type": "string",
                                        "enum": [
                                            "Issuer",
                                            "ClusterIssuer"
                                        ]
                                    },
                                    "name": {
                                        "description": "Name of the issuer",
                                        "type": "string"
                                    }
                                }
                            },
                            "name": {
                                "description": "Name of the Certificate resource",
                                "type": "string"
                            },
                            "renewBefore": {
                                "description": "Renew certificate before expiration (e.g., 360h for 15 days)",
                                "type": "string"
                            },
                            "secretName": {
                                "description": "Name of the secret to store the certificate",
                                "type": "string"
                            }
                        }
                    }
                },
                "create": {
                    "description": "Specifies whether Certificates should be created",
                    "default": false,
                    "type": "boolean"
                }
            }
        },
        "configmap": {
            "description": "ConfigMap configuration",
            "type": "object",
            "properties": {
                "configmaps": {
                    "description": "List of ConfigMaps to create and/or mount",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "binaryData": {
                                "description": "Optional: Key-value pairs for binary data (base64 encoded)",
                                "type": "object",
                                "additionalProperties": {
                                    "type": "string"
                                }
                            },
                            "data": {
                                "description": "Key-value pairs for the ConfigMap data field (string values)",
                                "type": "object",
                                "additionalProperties": {
                                    "type": "string"
                                }
                            },
                            "mountPath": {
                                "description": "Optional: Auto-mount this ConfigMap at the specified path in the container",
                                "type": "string"
                            },
                            "name": {
                                "description": "The exact name of the ConfigMap resource in Kubernetes",
                                "type": "string"
                            },
                            "readOnly": {
                                "description": "Optional: Mount as read-only",
                                "default": false,
                                "type": "boolean"
                            },
                            "subPath": {
                                "description": "Optional: Sub-path within the volume to mount a specific key",
                                "type": "string"
                            }
                        }
                    }
                },
                "create": {
                    "description": "Specifies whether ConfigMaps should be created",
                    "default": false,
                    "type": "boolean"
                }
            }
        },
        "deployment": {
            "description": "Deployment configuration for the application",
            "type": "object",
            "properties": {
                "affinity": {
                    "description": "Affinity rules for pod assignment",
                    "type": "object",
                    "additionalProperties": true
                },
                "args": {
                    "description": "Arguments to the entrypoint (overrides the container's CMD)",
                    "type": "array"
                },
                "command": {
                    "description": "Entrypoint array (overrides the container's ENTRYPOINT)",
                    "type": "array"
                },
                "containers": {
                    "description": "List of containers (use this for multiple containers instead of single container configuration above)",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "args": {
                                "description": "Arguments to the entrypoint",
                                "type": "array"
                            },
                            "command": {
                                "description": "Entrypoint array (overrides container entrypoint)",
                                "type": "array"
                            },
                            "env": {
                                "description": "Environment variables",
                                "type": "object"
                            },
                            "envFrom": {
                                "description": "Environment variables from ConfigMaps/Secrets",
                                "type": "array"
                            },
                            "image": {
                                "description": "Container image configuration",
                                "type": "object"
                            },
                            "livenessProbe": {
                                "description": "Liveness probe configuration",
                                "type": "object"
                            },
                            "name": {
                                "description": "Container name",
                                "type": "string"
                            },
                            "ports": {
                                "description": "Container ports",
                                "type": "array"
                            },
                            "readinessProbe": {
                                "description": "Readiness probe configuration",
                                "type": "object"
                            },
                            "resources": {
                                "description": "Resource limits and requests",
                                "type": "object"
                            },
                            "securityContext": {
                                "description": "Security context for this container",
                                "type": "object"
                            },
                            "volumeMounts": {
                                "description": "Volume mounts for this container",
                                "type": "array"
                            }
                        }
                    }
                },
                "create": {
                    "description": "Specifies whether a Deployment should be created",
                    "default": true,
                    "type": "boolean"
                },
                "deployStrategy": {
                    "type": "string",
                    "enum": [
                        "Recreate",
                        "RollingUpdate"
                    ]
                },
                "env": {
                    "description": "Environment variables as key-value pairs",
                    "type": "object",
                    "additionalProperties": true
                },
                "envFrom": {
                    "description": "Environment variable references from ConfigMaps/Secrets",
                    "type": "array"
                },
                "fullnameOverride": {
                    "description": "Override the full resource name",
                    "type": "string"
                },
                "hostname": {
                    "description": "pod hostname",
                    "type": "string"
                },
                "image": {
                    "description": "Container image configuration",
                    "type": "object",
                    "required": [
                        "repository",
                        "tag"
                    ],
                    "properties": {
                        "pullPolicy": {
                            "description": "Image pull policy",
                            "default": "IfNotPresent",
                            "type": "string",
                            "enum": [
                                "Always",
                                "IfNotPresent",
                                "Never"
                            ]
                        },
                        "repository": {
                            "description": "Container image repository",
                            "type": "string"
                        },
                        "tag": {
                            "description": "Image tag (immutable tags are recommended)",
                            "type": "string"
                        }
                    }
                },
                "imagePullSecrets": {
                    "description": "List of image pull secrets for private registries",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                },
                "nameOverride": {
                    "description": "Override the chart name",
                    "type": "string"
                },
                "nodeSelector": {
                    "description": "Node labels for pod assignment",
                    "type": "object",
                    "additionalProperties": true
                },
                "podAnnotations": {
                    "description": "Annotations to add to the pod",
                    "type": "object",
                    "additionalProperties": true
                },
                "podLabels": {
                    "description": "Labels to add to the pod",
                    "type": "object",
                    "additionalProperties": true
                },
                "podSecurityContext": {
                    "description": "Security context for the pod (fsGroup, etc.)",
                    "type": "object",
                    "additionalProperties": true
                },
                "replicas": {
                    "description": "Number of pod replicas to deploy",
                    "type": "integer"
                },
                "resources": {
                    "description": "Resource limits and requests for the container. We usually recommend not to specify default resources and to leave this as a conscious choice for the user",
                    "type": "object",
                    "additionalProperties": true
                },
                "securityContext": {
                    "description": "Security context for the container (capabilities, readOnlyRootFilesystem, runAsNonRoot, runAsUser, etc.)",
                    "type": "object",
                    "additionalProperties": true
                },
                "tolerations": {
                    "description": "Tolerations for pod assignment",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "effect": {
                                "type": "string",
                                "enum": [
                                    "NoSchedule",
                                    "PreferNoSchedule",
                                    "NoExecute"
                                ]
                            },
                            "key": {
                                "type": "string"
                            },
                            "operator": {
                                "type": "string",
                                "enum": [
                                    "Equal",
                                    "Exists"
                                ]
                            },
                            "tolerationSeconds": {
                                "type": "integer"
                            },
                            "value": {
                                "type": "string"
                            }
                        }
                    }
                },
                "volumeMounts": {
                    "description": "Additional volumeMounts on the output Deployment definition",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "mountPath": {
                                "description": "Path within the container",
                                "type": "string"
                            },
                            "name": {
                                "description": "Volume name to mount",
                                "type": "string"
                            },
                            "readOnly": {
                                "description": "Mount as read-only",
                                "type": "boolean"
                            },
                            "subPath": {
                                "description": "Sub-path within the volume",
                                "type": "string"
                            }
                        }
                    }
                },
                "volumes": {
                    "description": "Additional volumes on the output Deployment definition",
                    "type": "array"
                }
            }
        },
        "httproute": {
            "description": "HTTPRoute configuration for Gateway API",
            "type": "object",
            "properties": {
                "create": {
                    "description": "Specifies whether an HTTPRoute should be created",
                    "default": false,
                    "type": "boolean"
                },
                "hostnames": {
                    "description": "List of hostnames for the HTTPRoute",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "parentRefs": {
                    "description": "Parent references (Gateways) for the HTTPRoute",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "description": "Name of the Gateway",
                                "type": "string"
                            },
                            "namespace": {
                                "description": "Namespace of the Gateway",
                                "type": "string"
                            },
                            "sectionName": {
                                "description": "Section name of the Gateway listener",
                                "type": "string"
                            }
                        }
                    }
                },
                "rules": {
                    "description": "Routing rules for the HTTPRoute",
                    "type": "array"
                }
            }
        },
        "httproutes": {
            "description": "List of HTTPRoute resources to create",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "annotations": {
                        "description": "Annotations for the HTTPRoute",
                        "type": "object"
                    },
                    "hostnames": {
                        "description": "List of hostnames",
                        "type": "array"
                    },
                    "name": {
                        "description": "Name of the HTTPRoute resource (required)",
                        "type": "string"
                    },
                    "parentRefs": {
                        "description": "Parent references (Gateways)",
                        "type": "array"
                    },
                    "rules": {
                        "description": "Routing rules",
                        "type": "array"
                    }
                }
            }
        },
        "ingress": {
            "description": "Ingress configuration to expose the application externally",
            "type": "object",
            "properties": {
                "annotations": {
                    "description": "Annotations to add to the Ingress resource",
                    "type": "object",
                    "additionalProperties": true
                },
                "className": {
                    "description": "IngressClass name to use for the Ingress",
                    "type": "string"
                },
                "create": {
                    "description": "Specifies whether an Ingress should be created",
                    "default": false,
                    "type": "boolean"
                },
                "hosts": {
                    "description": "List of host rules for the Ingress",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "host": {
                                "type": "string"
                            },
                            "paths": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "path": {
                                            "type": "string"
                                        },
                                        "pathType": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "tls": {
                    "description": "TLS configuration for the Ingress",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "hosts": {
                                "description": "List of hosts covered by the TLS certificate",
                                "type": "array"
                            },
                            "secretName": {
                                "description": "Name of the TLS secret",
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "pvc": {
            "description": "PersistentVolumeClaim configuration",
            "type": "object",
            "properties": {
                "create": {
                    "description": "Specifies whether PVCs should be created",
                    "default": false,
                    "type": "boolean"
                },
                "pvcs": {
                    "description": "List of PVCs to create and/or mount",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "accessMode": {
                                "description": "Access mode for the PVC",
                                "default": "ReadWriteOnce",
                                "type": "string",
                                "enum": [
                                    "ReadWriteOnce",
                                    "ReadOnlyMany",
                                    "ReadWriteMany",
                                    "ReadWriteOncePod"
                                ]
                            },
                            "mountPath": {
                                "description": "Optional: Auto-mount this PVC at the specified path in the container",
                                "type": "string"
                            },
                            "name": {
                                "description": "The exact name of the PVC resource in Kubernetes",
                                "type": "string"
                            },
                            "readOnly": {
                                "description": "Optional: Mount as read-only",
                                "default": false,
                                "type": "boolean"
                            },
                            "size": {
                                "description": "Storage size (e.g., 10Gi, 1Ti). Required when creating PVCs",
                                "type": "string"
                            },
                            "storageClassName": {
                                "description": "StorageClass name. Optional, uses cluster default if not specified",
                                "type": "string"
                            },
                            "subPath": {
                                "description": "Optional: Sub-path within the volume to mount",
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "securityPolicies": {
            "description": "List of SecurityPolicy resources to create",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "annotations": {
                        "description": "Annotations for the SecurityPolicy",
                        "type": "object"
                    },
                    "extAuth": {
                        "description": "External authentication configuration",
                        "type": "object"
                    },
                    "name": {
                        "description": "Name of the SecurityPolicy resource (required)",
                        "type": "string"
                    },
                    "targetNamespace": {
                        "description": "Namespace of the target HTTPRoute (optional)",
                        "type": "string"
                    },
                    "targetRoute": {
                        "description": "Name of the HTTPRoute to apply this policy to (required)",
                        "type": "string"
                    }
                }
            }
        },
        "securityPolicy": {
            "description": "Envoy Gateway SecurityPolicy for the HTTPRoute",
            "type": "object"
        },
        "service": {
            "description": "Service configuration to expose the application",
            "type": "object",
            "properties": {
                "create": {
                    "description": "Specifies whether a Service should be created",
                    "default": true,
                    "type": "boolean"
                },
                "name": {
                    "description": "Name for the port",
                    "default": "http",
                    "type": "string"
                },
                "port": {
                    "description": "Service port",
                    "default": 0,
                    "type": [
                        "integer",
                        "string"
                    ]
                },
                "ports": {
                    "description": "List of ports",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "description": "Port name",
                                "type": "string"
                            },
                            "port": {
                                "description": "Service port",
                                "type": [
                                    "integer",
                                    "string"
                                ]
                            },
                            "protocol": {
                                "description": "Protocol",
                                "default": "TCP",
                                "type": "string",
                                "enum": [
                                    "TCP",
                                    "UDP",
                                    "SCTP"
                                ]
                            },
                            "targetPort": {
                                "description": "Target port on the container",
                                "type": [
                                    "integer",
                                    "string"
                                ]
                            }
                        }
                    }
                },
                "protocol": {
                    "description": "Protocol for the port",
                    "default": "TCP",
                    "type": "string",
                    "enum": [
                        "TCP",
                        "UDP",
                        "SCTP"
                    ]
                },
                "targetPort": {
                    "description": "Target port on the container",
                    "type": [
                        "integer",
                        "string",
                        "null"
                    ]
                },
                "type": {
                    "description": "Kubernetes Service type",
                    "default": "ClusterIP",
                    "type": "string",
                    "enum": [
                        "ClusterIP",
                        "NodePort",
                        "LoadBalancer",
                        "ExternalName"
                    ]
                }
            }
        },
        "serviceAccount": {
            "description": "Service account configuration for the deployment",
            "type": "object",
            "properties": {
                "annotations": {
                    "description": "Annotations to add to the service account",
                    "type": "object",
                    "additionalProperties": true
                },
                "automount": {
                    "description": "Automatically mount a ServiceAccount's API credentials",
                    "default": true,
                    "type": "boolean"
                },
                "create": {
                    "description": "Specifies whether a service account should be created",
                    "default": true,
                    "type": "boolean"
                },
                "name": {
                    "description": "The name of the service account to use. If not set and create is true, a name is generated using the fullname template",
                    "type": "string"
                }
            }
        }
    }
}
